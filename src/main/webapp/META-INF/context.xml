<Context>
    <Resource
            name="jdbc/contactsDB"
            auth="Container"
            type="javax.sql.DataSource"
            maxTotal="100"
            maxIdle="30"
            maxWaitMillis="10000"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/contacts?useSSL=false&amp;useTimezone=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=Europe/Minsk"
            username="root"
            password="root"
    />

    <Realm className="org.apache.catalina.realm.DataSourceRealm"
           dataSourceName="jdbc/contactsDB"
           localDataSource="true"
           digest="SHA-256"
           userTable="user"
           userNameCol="login"
           userCredCol="password"
           userRoleTable="user_roles"
           roleNameCol="role_name"
    />
</Context>